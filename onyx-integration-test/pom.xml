<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <name>Onyx Integration Test Deployment</name>
  <description>Example Assessment Center Web Application Deployment</description>

  <groupId>org.obiba.onyx</groupId>
  <artifactId>onyx-integration-test</artifactId>
  <packaging>war</packaging>

  <parent>
    <groupId>org.obiba.onyx</groupId>
    <artifactId>onyx-deploy-parent</artifactId>
    <version>1.10.0</version>
  </parent>

  <properties>
    <maven.compiler.target>1.7</maven.compiler.target>
    <maven.compiler.source>1.7</maven.compiler.source>
    <project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>

    <onyx-instruments.version>1.10-SNAPSHOT</onyx-instruments.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.obiba.jade</groupId>
      <artifactId>jade-core</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.obiba.jade</groupId>
      <artifactId>jade-remote-server</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.obiba.quartz</groupId>
      <artifactId>quartz-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.obiba.marble</groupId>
      <artifactId>marble-core</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.obiba.ruby</groupId>
      <artifactId>ruby-core</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>onyx-instrument-bootstrap</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-jdk14</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-bioimpedance-tanita-bc418</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-bioimpedance-tanita-tbf310</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-anklebrachial-summitdoppler-vantageabi</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-arterialstiffness</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-bonedensity</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-bonedensity-holologic-apex</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-bonedensity-frax</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-ecg</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-ecg-cardiosoft-mac800</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-spirometry</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-spirometry-ndd-easyonpc</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-noddletest</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-bloodpressure-vsm-bptru</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-gripstrength-jtech</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-weight-ricelake-140-10</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-audiogram-tremetrics-ra300</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-retinal-topcon-imagenetr4lite</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.onyx</groupId>
      <artifactId>interface-ge-vivid-i</artifactId>
      <version>${onyx-instruments.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.obiba.commons</groupId>
      <artifactId>obiba-security</artifactId>
    </dependency>

  </dependencies>

  <build>
    <finalName>onyx-integration-test</finalName>
    <plugins>

      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-instruments</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>onyx-instrument-bootstrap</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/bootstrap
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-bioimpedance-tanita-bc418</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/Impedance418
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-bioimpedance-tanita-tbf310</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/Impedance310
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-arterialstiffness</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/ArtStiffness
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-bonedensity</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/BoneDensity
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-bonedensity-holologic-apex</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/BoneDensityAPEX
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-bonedensity-frax</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/Frax
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-ecg</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/ECG
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-ecg-cardiosoft-mac800</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/ECGMAC800
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-anklebrachial-summitdoppler-vantageabi</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/AnkleBrachial
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-spirometry</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/Spirometry
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-spirometry-ndd-easyonpc</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/SpirometryNDD
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-noddletest</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/CognitiveTest
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-bloodpressure-vsm-bptru</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/BloodPressureBpTru
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-gripstrength-jtech</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/GripStrengthJTech
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-weight-ricelake-140-10</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/WeightRiceLake
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-audiogram-tremetrics-ra300</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/Audiogram
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-ge-vivid-i</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/UltrasoundGeVivid
                  </outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.obiba.onyx</groupId>
                  <artifactId>interface-retinal-topcon-imagenetr4lite</artifactId>
                  <type>zip</type>
                  <outputDirectory>
                    ${project.build.directory}/${project.build.finalName}/instruments/RetinalScan
                  </outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <configuration>
              <tasks>
                <!--<signjar alias="jade" keystore="${basedir}/exampleKeystore.jks" lazy="true" storepass="onyxadmin">-->
                  <!--<fileset dir="${project.build.directory}/${project.build.finalName}/instruments" includes="**/*.jar" />-->
                <!--</signjar>-->
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <!-- See ONYX-310 -->
        <version>1.1.1</version>
        <executions>
          <execution>
            <phase>process-classes</phase>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>org.obiba.onyx.example.questionnaire.util.CreateQuestionnaire</mainClass>
          <!-- See ONYX-310 -->
          <classpathScope>runtime</classpathScope>
          <arguments>
            <argument>${project.basedir}</argument>
          </arguments>
        </configuration>
      </plugin>

    </plugins>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>

  </build>

  <repositories>
    <repository>
      <id>obiba.org</id>
      <name>Obiba Maven 2.x Repository</name>
      <url>http://repo.obiba.org/repo</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

</project>
