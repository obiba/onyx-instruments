<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <name>Jade Bioimpedance Tanita BC-418 Interface</name>
  <description>Physical Measurement Bioimpedance Tanita BC-418 Interface</description>

  <parent>
    <groupId>org.obiba.jade.instrument</groupId>
    <artifactId>onyx-instruments</artifactId>
    <version>1.10-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <groupId>org.obiba.jade.instrument</groupId>
  <artifactId>interface-bioimpedance-tanita-bc418</artifactId>
  <packaging>jar</packaging>

  <dependencies>
    <dependency>
      <groupId>org.rxtx</groupId>
      <artifactId>rxtx</artifactId>
      <version>2.1.7-r2</version>
    </dependency>
    <dependency>
      <groupId>org.rxtx</groupId>
      <artifactId>rxtx-lib</artifactId>
      <version>2.1.7-r2</version>
      <classifier>win32</classifier>
    </dependency>
    <dependency>
      <groupId>org.obiba.jade.instrument</groupId>
      <artifactId>interface-bioimpedance-tanita-tbf310</artifactId>
      <version>${project.version}</version>
    </dependency>       
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
            </manifest>
            <manifestEntries>
              <Implementation-Build>${buildNumber}</Implementation-Build>
              <Built-By>OBiBa</Built-By>
              <Permissions>all-permissions</Permissions>
              <Trusted-Library>true</Trusted-Library>
              <Codebase>*</Codebase>
              <Application-Library-Allowable-Codebase>*</Application-Library-Allowable-Codebase>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo.webstart</groupId>
        <artifactId>webstart-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>make-jnlp</id>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>